#!/usr/bin/perl -w

# $Id: aid_grep_bounce,v 1.3 1998/11/26 00:51:46 mradwin Exp mradwin $

require 'aid_util.pl';

%bouncers = ();
&readspool(($ARGV[0]) ? $ARGV[0] : &aid_config('spoolfile'));
foreach(sort keys %bouncers)
{
    print $_, " ";
}
print "\n";

sub readspool {
    local($spoolFile) = @_;
    local($_,*SPOOL);

    open(SPOOL, $spoolFile) || die "can't open $spoolFile: $!\n";
    print STDERR "reading spool...\n";
    while(<SPOOL>) {
	if (/^\s*----- The following addresses had permanent fatal errors -----\s*$/)
	{

	    $_ = <SPOOL>;
	    
	    s/^\s*//;
	    s/\s*$//;
	    s/^<//;
	    s/>$//;

	    $bouncers{"\L$_\E"} = 1;
	}
	elsif (/^E-mail             : /)
	{
	    s/^E-mail             : //;
	    s/\s*$//;
	    $bouncers{"\L$_\E"} = 1;
	}
	elsif (/^From: Michael John Radwin <mvhs-alumni\@radwin.org>/)
	{
	    $_ = <SPOOL>;
	    if (/To:.*<([^>]+)>/)
	    {
		$bouncers{"\L$1\E"} = 1;
	    }
	}
    }
}
