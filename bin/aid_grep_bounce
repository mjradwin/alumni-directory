$dirname = $0;
$dirname =~ s,/[^/]+$,,;
push(@INC, $dirname);

require 'aid_util.pl';

%bouncers = ();
&readspool(($ARGV[0]) ? $ARGV[0] : &aid_config('spoolfile'));
foreach(sort keys %bouncers)
{
    print $_, " ";
}
print "\n";

sub readspool {
    local($spoolFile) = @_;
    local($_,*SPOOL);

    open(SPOOL, $spoolFile) || die "can't open $spoolFile: $!\n";
    select(STDOUT); $| = 1;
    print STDOUT "reading spool...\n";
    while(<SPOOL>) {
	if (/^\s*----- The following addresses had permanent fatal errors -----\s*$/)
	{

	    $_ = <SPOOL>;
	    
	    s/^\s*//;
	    s/\s*$//;
	    s/^<//;
	    s/>$//;

	    $bouncers{"\L$_\E"} = 1;
	}
	elsif (/^E-mail             : /)
	{
	    s/^E-mail             : //;
	    s/\s*$//;
	    $bouncers{"\L$_\E"} = 1;
	}
	elsif (/^From: Michael John Radwin <mvhs-alumni\@radwin.org>/)
	{
	    $_ = <SPOOL>;
	    if (/To:.*<([^>]+)>/)
	    {
		$bouncers{"\L$1\E"} = 1;
	    }
	}
    }
}
