#!/usr/bin/perl -w

# $Id: aid_grep_bounce,v 1.1 1998/11/02 22:34:48 mradwin Exp mradwin $

require 'aid_util.pl';

%bouncers = ();
&readspool(($ARGV[0]) ? $ARGV[0] : &aid_config('spoolfile'));
foreach(sort keys %bouncers)
{
    print $_, " ";
}
print "\n";

sub readspool {
    local($spoolFile) = @_;
    local($_,*SPOOL);

    open(SPOOL, $spoolFile) || die "can't open $spoolFile: $!\n";
    print "reading spool...\n";
    while(<SPOOL>) {
	if (/^\s*----- The following addresses had permanent fatal errors -----\s*$/)
	{

	    $_ = <SPOOL>;
	    
	    s/^\s*//;
	    s/\s*$//;
	    s/^<//;
	    s/>$//;

	    $bouncers{"\L$_\E"} = 1;
	}
	elsif (/^Email              : /)
	{
	    s/^Email              : //;
	    s/\s*$//;
	    $bouncers{"\L$_\E"} = 1;
	}
    }
}
