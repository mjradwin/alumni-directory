$dirname = $0;
$dirname =~ s,/[^/]+$,,;
push(@INC, $dirname);

require 'aid_util.pl';
require 'getopts.pl';

$0 =~ s,.*/,,;  # basename
$usage = "usage: $0 [-h] infile.db path-to-create-in [ids...]
    -h        Display usage information.
";

&Getopts('h') || die "$usage\n";
$opt_h && die "$usage\n";
$opt_h = $opt_h;		# avoid warning

$ARGV[0] || die "$usage\n";
$ARGV[1] || die "$usage\n";

$dbmfile = shift;
$dbmfile =~ s/\.db$//;
die "$0: ${dbmfile}.db: $!\n" unless -r "${dbmfile}.db";

dbmopen(%DB,$dbmfile,0444) || die "$0: ${dbmfile}.db: $!\n";

$pathname = shift;

print STDERR "vcards...";
if (@ARGV)
{
    foreach (@ARGV)
    {
	next unless defined $DB{$_};
	%rec = &aid_db_unpack_rec($_,$DB{$_});
	$filename = "${pathname}/$rec{'id'}.vcf";

	open(VCARD,">$filename") || die "can't open $filename: $!\n";
	print VCARD &aid_vcard_text(*rec);
	close(VCARD);

	utime $rec{'u'}, $rec{'u'}, $filename;
	print STDERR ' ', $_;
    }
}
else
{
    $i = 0;
    while (($key,$val) = each %DB)
    {
	next unless $key =~ /^\d+$/;
	%rec = &aid_db_unpack_rec($key,$val);
	next unless $rec{'v'};
	$filename = "${pathname}/$rec{'id'}.vcf";

	open(VCARD,">$filename") || die "can't open $filename: $!\n";
	print VCARD &aid_vcard_text(*rec);
	close(VCARD);

	utime $rec{'u'}, $rec{'u'}, $filename;
	print STDERR "." if ($i++ % 100) == 0;
    }
}
print STDERR "\n";

dbmclose(%DB);

# touch timestamp
$now = time;
$ts = "${pathname}/.created";
open(TS,">$ts") && close(TS);
utime $now, $now, $ts;

exit 0;
