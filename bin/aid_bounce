#!/usr/bin/perl -w

# $Id: aid_bounce,v 1.2 1998/05/17 05:02:39 mradwin Exp mradwin $

require 'getopts.pl';
require 'aid_util.pl';

$usage = 'usage: aid_bounce [-h] [ids...]
    -h        Display usage information.

Bumps up the bounce field for every id or email address listed on the
command line.
';

&Getopts('h') || die "$usage\n";
$opt_h && die "$usage\n";
$opt_h = $opt_h;                # avoid warning

exit(0) unless (@ARGV);

$cp   = &aid_config('cp');
-x $cp   || die "$cp   is not executable!";

$dbFile = &aid_config('aiddir') . "data/master.adr";

@db = &aid_create_db($dbFile);

for (@db) {
    next unless defined($_) && $_ ne '';
    %rec = &aid_split($_);
    $addrs{"\L$rec{'email'}\E"} = $rec{'id'};
}

for (@ARGV) {
    if (/^\d+$/) {
	if (defined @db[$_]) {
	    %rec = &aid_split(@db[$_]);
	    print "$rec{$_} ($_) was $rec{'bounces'}, now ";
	    $rec{'bounces'}++;
	    print "$rec{'bounces'}\n";
	    $db[$_] = &aid_join(*rec);
	} else {
	    warn "can't find id $_\n";
	    next;
	}
    } else {
	$_ = "\L$_\E";
	if (defined $addrs{$_}) {
	    %rec = &aid_split(@db[$addrs{$_}]);
	    print "$_ ($addrs{$_}) was $rec{'bounces'}, now ";
	    $rec{'bounces'}++;
	    print "$rec{'bounces'}\n";
	    $db[$addrs{$_}] = &aid_join(*rec);
	} else {
	    warn "can't find email addr $_\n";
	    next;
	}
    }
}

$tmpFile = "/tmp/aid_add.$$";
open(TMP, ">$tmpFile") || die "Can't open $tmpFile: $!\n";
for (@db) {
    next unless defined($_) && $_ ne '';
    print TMP $_, "\n";
}
close(TMP);

system "$cp -f $tmpFile $dbFile"
    || die "failed to $cp -f $tmpFile $dbFile: $!\n";
unlink($tmpFile) || die "couldn't unlink $tmpFile: $!\n";
