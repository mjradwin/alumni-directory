#!/usr/bin/perl -w

# $Id: aid_bounce,v 3.11 1998/05/17 17:12:41 mradwin Exp mradwin $

require 'ctime.pl';
require 'getopts.pl';
require 'aid_util.pl';

$usage = 'usage: aid_bounce [-hv] [ids...]
    -h        Display usage information.
    -v        Invalidate ids.

Bumps up the bounce field for every id or email address listed on the
command line.
';

&Getopts('hv') || die "$usage\n";
$opt_h && die "$usage\n";
$opt_h = $opt_h;                # avoid warning
$opt_v = $opt_v;                # avoid warning

exit(0) unless (@ARGV);

$cp   = &aid_config('cp');
-x $cp   || die "$cp   is not executable!";

$dbFile = &aid_config('aiddir') . "data/master.adr";

@db = &aid_create_db($dbFile);

for (@db) {
    next unless defined($_) && $_ ne '';
    %rec = &aid_split($_);
    $addrs{"\L$rec{'email'}\E"} = $rec{'id'};
}

$time = time;

for (@ARGV) {
    if (/^\d+$/) {
	if (defined @db[$_]) {
	    %rec = &aid_split(@db[$_]);
	} else {
	    warn "can't find id $_\n";
	    next;
	}
    } else {
	$_ = "\L$_\E";
	if (defined $addrs{$_}) {
	    %rec = &aid_split(@db[$addrs{$_}]);
	} else {
	    warn "can't find email addr $_\n";
	    next;
	}
    }

    print "$rec{'email'} ($rec{'id'}) was ";
    if ($rec{'bounces'} == 0) {
	print "blank\n";
    } else {
	print &ctime($rec{'bounces'});
    }
    $rec{'bounces'} = $time;
    $rec{'valid'} = 0 if $opt_v;
    $db[$rec{'id'}] = &aid_join(*rec);
}

$tmpFile = "/tmp/aid_add.$$";
open(TMP, ">$tmpFile") || die "Can't open $tmpFile: $!\n";
for (@db) {
    next unless defined($_) && $_ ne '';
    print TMP $_, "\n";
}
close(TMP);

system "$cp -f $tmpFile $dbFile"
    || die "failed to $cp -f $tmpFile $dbFile: $!\n";
unlink($tmpFile) || die "couldn't unlink $tmpFile: $!\n";
