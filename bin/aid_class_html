#!/usr/bin/perl -w

#
# does the html version of the grad-date address list
# $Id: aid_class_html,v 3.29 1999/03/04 17:34:06 mradwin Exp mradwin $
#

require 'aid_util.pl';
require 'getopts.pl';

$0 =~ s,.*/,,;  # basename
$usage = "usage: $0 [-htaw] [-c class] infile.db outfile
    -h        Display usage information.
    -t        Output text only.
    -a        Awalt mode.
    -w        Web page mode.
    -c class  Only people from <class>.
";

&Getopts('htawc:') || die "$usage\n";
$opt_h && die "$usage\n";
$ARGV[0] || die "$usage\n";
$ARGV[1] || die "$usage\n";
$opt_h = $opt_h;		# avoid warning

$info_gif = &aid_image_tag('info');
$blank_gif = ($opt_t) ? "" : &aid_image_tag('blank');

$ARGV[0] =~ s/\.db$//;
die "can't open $ARGV[0].db\n" unless -r "$ARGV[0].db";
dbmopen(DB,$ARGV[0],0444);

$prefix = $opt_a ? 'awalt_' : ($opt_w ? 'www_' : '');
$affix = $opt_a ? '_awalt' : ($opt_w ? '_www' : '');
$title  = $opt_a ? 'Awalt Alumni' : 
    ($opt_w ? 'Alumni with Web Pages' : 'Listed by Graduating Class');
$pageno = $opt_a ? 3 : ($opt_w ? 4 : -1);

if ($opt_c)
{
    die "no __${prefix}${opt_c}__ key!\n"
	unless defined $DB{"__${prefix}${opt_c}__"};
    @years = ($opt_c);
}
else
{
    die "no __${prefix}years__ key!\n"
	unless defined $DB{"__${prefix}years__"};
    @years = unpack("n*",$DB{"__${prefix}years__"});
    push(@years, 'other');
}

open(FMTOUT,">$ARGV[1]") || die "Can't open $ARGV[1]: $!\n";

if (!$opt_t) {
    $time = unpack("N",$DB{"__t${affix}__"});

    print FMTOUT &common_html_hdr($pageno,$title,1,$time);
    print FMTOUT &common_intro_para(1);
    print FMTOUT &aid_class_jump_bar('#grad','',*years,0);
    print FMTOUT "<pre>";
}

print FMTOUT "Name$blank_gif                                     E-Mail\n";
print FMTOUT "---------------------------------------------------------------------------";

$prev = '1900';
foreach $year (@years)
{
    print STDERR ".";
    @ids = unpack("n*",$DB{"__${prefix}${year}__"});

    print FMTOUT "\n";
    if ($year =~ /^\d+$/)
    {
	$opt_t || print FMTOUT "<a name=\"grad${year}\" " .
	    "href=\"" . &aid_config('master_path') . "class/${year}.html\">";
	print FMTOUT "Class of $year";
	$opt_t || print FMTOUT "</a>  (<a href=\"#top\">top</a>)";
	print FMTOUT "\n";
	$prev = $year;
    }
    else
    {
	$opt_t || print FMTOUT "<a name=\"gradother\" " .
	    "href=\"" . &aid_config('master_path') . "class/other.html\">"
		if $prev =~ /^\d+$/;
	print FMTOUT "Faculty/Staff";
	$opt_t || print FMTOUT "</a>" if $prev =~ /^\d+$/;
	print FMTOUT ' ' x (13 - length("Faculty/Staff"));
	$opt_t || print FMTOUT "  (<a href=\"#top\">top</a>)";
	print FMTOUT "\n";
	$prev = $year;
    }

    foreach $id (@ids)
    {
	%rec = &aid_db_unpack_rec($id,$DB{$id});
	next unless $rec{'valid'};

	$fullname = &fullname(*rec);
	$regschool = ($opt_a) ? $aid_util'school_awalt :
	    $aid_util'school_default;

	if ($rec{'sch_id'} != $regschool)
	{
	    $affil     = "  [$aid_util'school_affil[$rec{'sch_id'}]]";
	}
	else
	{
	    $affil     = "";
	}

	print FMTOUT ' ';
	$opt_t || print FMTOUT "<a href=\"" . &aid_about_path(*rec) . "\">$info_gif</a>"; #'#
	$opt_t || print FMTOUT "<a name=\"$rec{'alias'}\"";
	$opt_t || print FMTOUT " href=\"$rec{'www'}\"" if $rec{'www'} ne '';
	$opt_t || print FMTOUT ">";
	print FMTOUT $fullname;
	$opt_t || print FMTOUT "</a>";
	print FMTOUT $affil;
	print FMTOUT ' ', ' ' x (39 - (length($fullname) + length($affil)));
	$opt_t || print FMTOUT "<a href=\"mailto:", $rec{'email'}, "\">";
	print FMTOUT $rec{'email'};
	$opt_t || print FMTOUT "</a>";
	$opt_t || print FMTOUT &aid_is_new_html(*rec);
	print FMTOUT "\n";
    }
}
print STDERR "\n";

$opt_t || print FMTOUT "</pre>\n";
$opt_t || print FMTOUT &common_html_ftr($pageno);

dbmclose(DB);
close(FMTOUT);
utime $time, $time, $ARGV[1] unless $opt_t;

# touch timestamp
$now = time;
$ts = $ARGV[1];
$ts =~ s,([^/]+)$,\.$1,;
open(TS,">$ts") && close(TS);
utime $now, $now, $ts;

exit(0);
