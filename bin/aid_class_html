#
#   This program is free software; you can redistribute it and/or modify
#   it under the terms of the GNU General Public License as published by
#   the Free Software Foundation; either version 2 of the License, or
#   (at your option) any later version.
#
#   This program is distributed in the hope that it will be useful,
#   but WITHOUT ANY WARRANTY; without even the implied warranty of
#   MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.  See the
#   GNU General Public License for more details.
#
#   You should have received a copy of the GNU General Public License
#   along with this program; if not, write to the Free Software
#   Foundation, Inc., 59 Temple Place, Suite 330, Boston, MA  02111-1307  USA
#

$dirname = $0;
$dirname =~ s,/[^/]+$,,;
push(@INC, $dirname);

require 'aid_util.pl';
require 'getopts.pl';

$0 =~ s,.*/,,;  # basename
$usage = "usage: $0 [-hqtw] [-c class] infile.db outfile
    -h        Display usage information.
    -q        Quiet.
    -t        Output text only.
    -w        Web page mode.
    -c class  Only people from <class>.
";

&Getopts('hqtwc:') || die "$usage\n";
$opt_h && die "$usage\n";
$ARGV[0] || die "$usage\n";
$ARGV[1] || die "$usage\n";
$opt_h = $opt_h;		# avoid warning

$info_gif = &aid_image_tag('info');
$blank_gif = ($opt_t) ? '' : &aid_image_tag('blank') . ' ';

$ARGV[0] =~ s/\.db$//;
die "can't open $ARGV[0].db\n" unless -r "$ARGV[0].db";
dbmopen(%DB,$ARGV[0],0444);

$prefix = $opt_w ? 'www_' : '';
$affix = $opt_w ? '_www' : '';
$title  = $opt_w ? 'Alumni with Web Pages' : 'Listed by Graduating Class';
$pageno = $opt_w ? 4 : -1;

if ($opt_c)
{
    die "no _${prefix}${opt_c} key!\n"
	unless defined $DB{"_${prefix}${opt_c}"};
    @years = ($opt_c);
}
else
{
    die "no _${prefix}years key!\n"
	unless defined $DB{"_${prefix}years"};
    @years = unpack("n*",$DB{"_${prefix}years"});
    push(@years, 'other');
}

open(FMTOUT,">$ARGV[1]") || die "Can't open $ARGV[1]: $!\n";

if (!$opt_t) {
    $time = unpack("N",$DB{"_t${affix}"});

    print FMTOUT &aid_common_html_hdr($pageno,$title,1,$time);
    print FMTOUT &aid_common_intro_para(1);
    print FMTOUT &aid_class_jump_bar('#grad','',*years,1);
    print FMTOUT "<pre>";
}

print FMTOUT "Name $blank_gif                                    E-Mail\n";
print FMTOUT "---------------------------------------------------------------------------";

select(STDOUT); $| = 1;
$prev = '1900';
foreach $year (@years)
{
    print STDOUT "." unless $opt_q;
    @ids = unpack("n*",$DB{"_${prefix}${year}"});

    print FMTOUT "\n";
    if ($year =~ /^\d+$/)
    {
	$opt_t || print FMTOUT "<a name=\"grad${year}\" " .
	    "href=\"" . &aid_config('master_path') . "class/${year}.html\">";
	print FMTOUT "Class of $year";
	$opt_t || print FMTOUT "</a>  (<a href=\"#top\">top</a>)";
	print FMTOUT "\n";
	$prev = $year;
    }
    else
    {
	$opt_t || print FMTOUT "<a name=\"gradother\" " .
	    "href=\"" . &aid_config('master_path') . "class/other.html\">"
		if $prev =~ /^\d+$/;
	print FMTOUT "Faculty/Staff";
	$opt_t || print FMTOUT "</a>" if $prev =~ /^\d+$/;
	print FMTOUT ' ' x (13 - length("Faculty/Staff"));
	$opt_t || print FMTOUT "  (<a href=\"#top\">top</a>)";
	print FMTOUT "\n";
	$prev = $year;
    }

    foreach $id (@ids)
    {
	%rec = &aid_db_unpack_rec($id,$DB{$id});
	next unless $rec{'v'};

	$fullname = &aid_fullname(*rec);

	print FMTOUT ' ';
	$opt_t || print FMTOUT "<a href=\"" . &aid_about_path(*rec) . "\">$info_gif</a> "; #'#
	$opt_t || print FMTOUT "<a name=\"$rec{'a'}\"";
	$opt_t || print FMTOUT " href=\"$rec{'w'}\"" if $rec{'w'} ne '';
	$opt_t || print FMTOUT ">";
	print FMTOUT $fullname;
	$opt_t || print FMTOUT "</a>";
	print FMTOUT ' ', ' ' x (39 - (length($fullname)));
	$opt_t || print FMTOUT "<a href=\"mailto:", $rec{'e'}, "\">";
	print FMTOUT $rec{'e'};
	$opt_t || print FMTOUT "</a>";
	$opt_t || print FMTOUT &aid_is_new_html(*rec);
	print FMTOUT "\n";
    }
}
print STDOUT "\n" unless $opt_q;

$opt_t || print FMTOUT "</pre>\n";
$opt_t || print FMTOUT &aid_common_html_ftr($pageno);

dbmclose(%DB);
close(FMTOUT);
utime $time, $time, $ARGV[1] unless $opt_t;

# touch timestamp
$now = time;
$ts = $ARGV[1];
$ts =~ s,([^/]+)$,\.$1,;
open(TS,">$ts") && close(TS);
utime $now, $now, $ts;

exit(0);
