#!/usr/local/bin/perl

# does the html version of the alphabetical address list

require 'mv_util.pl';
require 'tableheader.pl';
require 'getopts.pl';

$htmlname = "all.html";

$usage = 'usage: mv_alpha_html [-ht] infile.adr outfile
    -h        Display usage information.
    -t        Output text only
';

&Getopts('ht') || die "$usage\n";
$opt_h && die "$usage\n";
$ARGV[0] || die "$usage\n";
$ARGV[1] || die "$usage\n";

open(MVHS,$ARGV[0]) || die "Can't open $ARGV[0]: $!\n";
open(FMTOUT,">$ARGV[1]") || die "Can't open $ARGV[1]: $!\n";

if (!$opt_t) {
    print FMTOUT &common_html_hdr(1);
    print FMTOUT "<br>";
    print FMTOUT &tableheader("Alumni Listed by Last Name", 1, 'ffff99', 1);
    print FMTOUT '
<p>Any entries marked with <img src="new.gif" alt="[new]" width="28"
height="11"> have been added to the Directory within the last month.
The <img src="info.gif" height=12 width=12 hspace=4 border=0
alt="[i]"> icon lets you get more detailed information about an
alumnus.</p>
';
    print FMTOUT "<p>Index: <tt>";
    # do the funky quick-jump bar
    $lastInitial = 'A';
    while ($lastInitial ne 'AA') {
	print FMTOUT "<a href=\"#$lastInitial\">$lastInitial</a>\n";
	$lastInitial++;
    }
    print FMTOUT "</tt>";
    print FMTOUT "\n<p>\n<pre>";
}

$info_gif = "<img src=\"info.gif\" height=12 width=12 hspace=4 border=0 alt=\"[i]\">";
$blank_gif = ($opt_t) ? "" : 
	"<img src=\"blank.gif\" height=12 width=12 hspace=4 border=0 alt=\"\">";
$cgi = &mv_config('cgi_path');

print FMTOUT "Name and Graduation Year$blank_gif                 Email\n";
print FMTOUT "---------------------------------------------------------------------------";

$lastInitial = "Z";
while(<MVHS>) {
    chop;
    ($time,$id,$req,$last,$first,$married,
     $school,$year,$email,$alias,$homepage,$location) = &mv_parse($_);

    if ($lastInitial ne substr($last, 0, 1)) {
	$lastInitial = substr($last, 0, 1);
	print FMTOUT "\n";
	$opt_t || print FMTOUT "<a name=\"$lastInitial\">";
	print FMTOUT $lastInitial;
	$opt_t || print FMTOUT "</a> (<a href=\"$htmlname\">top</a>)";
	print FMTOUT "\n";
    }

    $fullname = &fullname($first,$last,$married);
    $affil = &affiliate($year,$school);

    print FMTOUT ' ';
    $opt_t || print FMTOUT "<a href=\"$cgi?about=$id\">$info_gif</a>";
    $opt_t || print FMTOUT "<a name=\"$alias\"";
    $opt_t || print FMTOUT " href=\"$homepage\"" if $homepage ne '';
    $opt_t || print FMTOUT ">";
    print FMTOUT $fullname;
    $opt_t || print FMTOUT "</a>";
    print FMTOUT $affil;
    print FMTOUT ' ', ' ' x (39 - (length($fullname) + length($affil)));
    $opt_t || print FMTOUT "<a href=\"mailto:", $email, "\">";
    print FMTOUT $email;
    $opt_t || print FMTOUT "</a>";
    $opt_t || print FMTOUT " <img alt=\"[new]\" WIDTH=28 HEIGHT=11 SRC=\"new.gif\">" if &is_new($time);
    print FMTOUT "\n";
}

$opt_t || print FMTOUT "</PRE>\n";
$opt_t || print FMTOUT &common_html_ftr(1);

exit(0);
