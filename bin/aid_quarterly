set -x
date=`/bin/date '+%Y%m%d'`

make recent.txt alpha.txt class.txt
./bin/aid_welcome -a -r1 -m alpha.txt  -l logs/massmail-${date}-1.log data/working.db
./bin/aid_welcome -a -r2 -m class.txt  -l logs/massmail-${date}-2.log data/working.db
./bin/aid_welcome -a -r3 -m recent.txt -l logs/massmail-${date}-3.log data/working.db
rm -f recent.txt alpha.txt class.txt .recent.txt .alpha.txt .class.txt

mkdir classonly
./bin/aid_multi_class_txt data/working.db classonly
./bin/aid_multi_class_welcome data/working.db classonly
rm -rf classonly

cat logs/massmail-${date}-?.log > logs/massmail-${date}.log

rm -f logs/massmail-${date}-?.log
