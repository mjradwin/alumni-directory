set -x
date=`/bin/date '+%Y%m%d'`

make recent.txt
nice ./bin/aid_welcome -a -r3 -m recent.txt -l logs/massmail-${date}-3.log \
    data/working.db
rm -f recent.txt .recent.txt

mkdir classonly
nice ./bin/aid_multi_class_txt data/working.db classonly
nice ./bin/aid_multi_class_welcome data/working.db classonly
rm -rf classonly

ids=`./bin/aid_dbm_read -oi data/working.db`
if [ "$ids" ]; then
    nice ./bin/aid_welcome -c -l logs/massmail-${date}-c.log \
	data/working.db $ids
fi

cat logs/massmail-${date}-?.log > logs/massmail-${date}.log
rm -f logs/massmail-${date}-?.log
