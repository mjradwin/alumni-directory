$dirname = $0;
$dirname =~ s,/[^/]+$,,;
unshift(@INC, $dirname);

require 'aid_util.pl';
require 'getopts.pl';

$0 =~ s,.*/,,;  # basename
$usage = "usage: $0 [-hq] infile.db output-dir
    -h        Display usage information.
    -q        Quiet.
";

&Getopts('hq') || die "$usage\n";
$opt_h && die "$usage\n";
$ARGV[0] || die "$usage\n";
$ARGV[1] || die "$usage\n";
$opt_h = $opt_h;		# avoid warning
$opt_q = $opt_q;		# avoid warning

$dbmfile = shift;
$dbmfile =~ s/\.db$//;
die "$0: ${dbmfile}.db: $!\n" unless -r "${dbmfile}.db";

dbmopen(%DB,$dbmfile,0444) || die "$0: ${dbmfile}.db: $!\n";

die "corrupt/missing _years key!"
    unless defined $DB{'_years'} && $DB{'_years'} ne '';
@years = unpack("n*",$DB{'_years'});
push(@years, 'other') if defined $DB{'_other'} && $DB{'_other'} ne '';

dbmclose(%DB);

$output_dir = shift;
die "$0: $output_dir: $!\n" unless -d $output_dir;

$class_exe = &aid_config('aiddir') . 'bin/aid_class_html';
die "$0: $class_exe: $!\n" unless -x $class_exe;

foreach (@years)
{
    print "$class_exe -qtc $_ ${dbmfile}.db ${output_dir}/${_}.txt\n"
	unless $opt_q;
    system $class_exe,
    	'-qtc', $_,
    	$dbmfile . '.db',
    	$output_dir . '/' . $_ . '.txt';
}

exit 0;
