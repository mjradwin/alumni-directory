require 'getopts.pl';
require 'aid_util.pl';

$0 =~ s,.*/,,;  # basename
$usage = "usage: $0 [-hwm] [mailspoolfile]
    -h        Display usage information.
    -w        Don't mail welcome messages.
    -m        Manual operation (don't rebuild or mail welcome messages).
";

&Getopts('hmw') || die "$usage\n";
$opt_h && die "$usage\n";
$opt_h = $opt_h;                # avoid warning
$opt_w = $opt_w;                # avoid warning

$sub_beg_str = &aid_config('sub_beg_str');
$sub_end_str = &aid_config('sub_end_str');
$note_beg_str = &aid_config('note_beg_str');
$note_end_str = &aid_config('note_end_str');

$cp   = &aid_config('cp');
$make = &aid_config('make');

-x $cp   || die "$0: $cp   is not executable!";
-x $make || die "$0: $make is not executable!";

@new_ids = ();
@upd_ids = ();

&readspool(($ARGV[0]) ? $ARGV[0] : &aid_config('spoolfile'));
&rebuild() unless $opt_m;
&mail_welcome() unless $opt_m || $opt_w;

print STDERR "done!\n";
exit(0);

# make the "what's new" text fit in 55 columns.
format NEWSOUT =
^<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<~~
$note
.

format STDOUT =
^<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<~~
$note
.

sub readspool {
    local($spoolFile) = @_;
    local($_);
    local($logFile,$newsFile,*SPOOL);
    local($newsp,$browserLog);

    $browserLog = &aid_config('aiddir') . "logs/browsers.log";
    open(SPOOL, $spoolFile) || die "$0: can't open $spoolFile: $!\n";
    print STDERR "reading spool...\n";
    while(<SPOOL>)
    {
	next unless /^$sub_beg_str/o;
	
	%rec = ();
	$newsp = 0;
	while(<SPOOL>)
	{
	    last if /^$sub_end_str/o;

	    if (/^$note_beg_str/o)
	    {
		$note = '';
		$maxlen = 0;
		while(<SPOOL>)
		{
		    last if /^$note_end_str/o;
		    $maxlen = length($_) if (length($_) > $maxlen);
		    $note .= $_;
		}
		$newsp = 1;	# they had a What's New? note
	    }
	    else
	    {
		chop;
		warn "$0: bad spool line $_\n" unless /^.+=.*$/;
		($key,$val) = split(/=/, $_, 2);
		$rec{$key} = $val;
	    }
	}
	
	&addname(*rec) || die "$0: can't add $rec{'id'} $rec{'e'}!\n";

	$newsFile = &aid_newsfile($rec{'id'});
	if ($newsp)
	{
	    open(NEWSOUT, ">$newsFile") ||
		die "$0: can't open $newsFile: $!\n";
	    print "NOTE $newsFile\n";

	    if ($maxlen <= 60)
	    {
		print STDOUT  $note;
		print NEWSOUT $note;
	    }
	    else
	    {
		$note_bak = $note;
		write(NEWSOUT);	# destructively modifies note
		$note = $note_bak;
		print "(reformatted)\n";
		write(STDOUT);
	    }
	    close(NEWSOUT);
	}
	elsif (-e $newsFile)
	{
	    print "No news, but newsFile exists.\nREMOVING $newsFile\n";
	    unlink($newsFile);
	}
	    
	if ($rec{'browser'} ne '')
	{
	    open(BROWSERLOG,">>$browserLog") || die "$0: $browserLog: $!\n";
	    print BROWSERLOG time, " - $rec{'id'} - $rec{'browser'}\n";
	    close(BROWSERLOG);
	}
    }
    close(SPOOL);

    1;
}


sub rebuild
{
    chdir &aid_config('aiddir') || die "$0: can't chdir: $!\n";

    print STDERR "rebuilding...\n";
    system $make || die "$0: failed to run $make: $!\n";
}

sub mail_welcome
{
    local($cmd);
    local($dbmfile) = &aid_config('dbmfile');

    chdir &aid_config('aiddir') || die "$0: can't chdir: $!\n";

    print STDERR "mailing...";
    if (@new_ids)
    {
	print STDERR ' new(', join(' ', @new_ids), ')';
	$cmd = "./bin/aid_welcome $dbmfile " . join(' ', @new_ids);
	system $cmd || die "$0: failed to run $cmd: $!\n";
    }

    if (@upd_ids)
    {
	print STDERR ' upd(', join(' ', @upd_ids), ')';
	$cmd = "./bin/aid_welcome -u $dbmfile " . join(' ', @upd_ids);
	system $cmd || die "$0: failed to run $cmd: $!\n";
    }

    print STDERR "\n";
}


sub addname
{
    local(*rec) = @_;
    local($[) = 0;
    local($_);
    local($dbFile,$logFile,@db,%oldrec);
    local($cmd,$tmpFile,*LOG,*TMP);
    local($key_name,$key_email,%id_by_email,%id_by_name);

    $dbFile = &aid_config('aiddir') . "data/master.adr";
    $logFile = &aid_config('aiddir') . "logs/additions.log";
    @db = &aid_create_db($dbFile);

    for (@db) {
	next unless defined($_) && $_ ne '';
	%oldrec = &aid_split($_);

	$key_email = "\L$oldrec{'e'}\E" .
	    &aid_mangle("\L$oldrec{'sn'}\E") .
	    &aid_mangle("\L$oldrec{'gn'}\E");
	$key_name = &aid_mangle("\L$oldrec{'sn'}\E") .
	    &aid_mangle("\L$oldrec{'gn'}\E") . $oldrec{'yr'};
	$id_by_email{$key_email} = $oldrec{'id'};
	$id_by_name{$key_name} = $oldrec{'id'};
    }
    undef(%oldrec);

    open(LOG, ">>$logFile") || die "$0: can't open $logFile: $!\n";
    select(LOG); $| = 1; select(STDOUT);

    # assign the double-submit newbies the same id if we've seen their
    # email address before
    if ($rec{'id'} == -1)
    {
	$key_email = "\L$rec{'e'}\E" .
	    &aid_mangle("\L$rec{'sn'}\E") . &aid_mangle("\L$rec{'gn'}\E");
	$key_name = &aid_mangle("\L$rec{'sn'}\E") .
	    &aid_mangle("\L$rec{'gn'}\E") . $rec{'yr'};

	if (defined $id_by_email{$key_email})
	{
	    $rec{'id'} = $id_by_email{$key_email};
	    %oldrec = &aid_split($db[$rec{'id'}]);

	    $rec{'c'} = $oldrec{'c'};
	}
	elsif (defined $id_by_name{$key_name})
	{
	    $rec{'id'} = $id_by_name{$key_name};
	    %oldrec = &aid_split($db[$rec{'id'}]);

	    $rec{'c'} = $oldrec{'c'};
	    $rec{'eu'} = $rec{'u'} if
		$oldrec{'e'} ne $rec{'e'};
	    $rec{'eo'} = $oldrec{'e'} if
		$oldrec{'e'} ne $rec{'e'};
	}
	undef(%oldrec);
    }

    if ($rec{'id'} == -1)
    {
	$rec{'id'} = ($#db + 1);

	push(@new_ids, $rec{'id'});
	print     "new - ";
	print LOG "new - ";
    }
    else
    {
	%oldrec = &aid_split($db[$rec{'id'}]);

	push(@upd_ids, $rec{'id'})
	     unless ((grep(/$rec{'id'}/, @new_ids)) ||
		     (grep(/$rec{'id'}/, @upd_ids)));

	print     "upd ", $oldrec{'e'}, " ";
	print LOG "upd ", $oldrec{'e'}, " ";
	undef(%oldrec);
    }

    $db[$rec{'id'}] = &aid_join(*rec);
    print     $db[$rec{'id'}], "\n";
    print LOG $db[$rec{'id'}], "\n";
    close(LOG);

    $tmpFile = "/tmp/aid_add.$$";
    open(TMP, ">$tmpFile") || die "$0: can't open $tmpFile: $!\n";
    for (@db) {
	next unless defined($_) && $_ ne '';
	print TMP $_, "\n";
    }
    close(TMP);

    $cmd = "$cp -f $tmpFile $dbFile";
    system $cmd || die "$0: failed to run $cmd: $!\n";
    unlink($tmpFile) || die "$0: couldn't unlink $tmpFile: $!\n";

    $rec{'id'};
}
