#   along with this program; if not, write to the Free Software
#   Foundation, Inc., 59 Temple Place, Suite 330, Boston, MA  02111-1307  USA
#

$dirname = $0;
$dirname =~ s,/[^/]+$,,;
unshift(@INC, $dirname);

use DB_File;

require 'aid_util.pl';
use Getopt::Std;

$0 =~ s,.*/,,;  # basename
$usage = "usage: $0 [-hqa] infile.db outfile.db
    -h        Display usage information.
    -a        Rebuild aliases, too.
    -q        Quiet.
";

getopts('hqa') || die "$usage\n";
$opt_h && die "$usage\n";
defined $ARGV[0] || die "$usage\n";
defined $ARGV[1] || die "$usage\n";

$in_dbmfile = shift;
tie(%OLDDB, 'DB_File', $in_dbmfile, O_RDONLY, 0444, $DB_File::DB_HASH)
    or die "$in_dbmfile: $!\n";

$dbmfile = shift;
$db = tie(%DB, 'DB_File', $dbmfile, O_RDWR|O_CREAT, 0644, $DB_File::DB_HASH)
    or die "$dbmfile: $!\n";

my(%aliases);
while (($key,$val) = each(%OLDDB))
{
    next unless $key =~ /^\d+$/;

    %rec = &aid_db_unpack_rec($key,$val);
    $rec{'a'} = '' if ($opt_a);

    if (defined $rec{'a'} && $rec{'a'} ne '') {
	$aliases{$key} = $rec{'a'};
    } else {
	$aliases{$key} = &aid_generate_alias(*rec);
    }
}

while (($key,$val) = each(%OLDDB))
{
    next unless $key =~ /^\d+$/;

    %rec = &aid_db_unpack_rec($key,$val);

    foreach (@aid_edit_field_names)
    {
	$rec{$_} = '' unless defined $rec{$_};
    }

    $rec{'a'} = $aliases{$rec{'id'}};
    $DB{$rec{'id'}} = &aid_db_pack_rec(*rec);
    $email = $rec{'e'};
    $DB{"\L$email\E"} = pack('n', $rec{'id'});
}

untie(%OLDDB);

&aid_rebuild_secondary_keys(\%DB,$opt_q,0,0);
$db->sync;

undef $db;
untie(%DB);

print STDOUT "$0: build successful\n" unless $opt_q;
exit(0);

# avoid warnings
if ($^W && 0)
{
    $opt_h = $opt_h;
    $opt_a = $opt_a;
    @aid_edit_field_names = ();
}
