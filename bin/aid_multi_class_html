#!/usr/local/bin/perl -w

#
# does the html verbose pages
# $Id: aid_verbose_html,v 1.14 1998/01/03 12:30:11 mjr Exp mjr $
#

require 'aid_util.pl';
require 'getopts.pl';
require 'ctime.pl';

$usage = 'usage: aid_verbose_html [-h] infile.adr
    -h        Display usage information.
';

&Getopts('h') || die "$usage\n";
$opt_h && die "$usage\n";
$ARGV[0] || die "$usage\n";
$opt_h = $opt_h;		# avoid warning

open(DATA,$ARGV[0]) || die "Can't open $ARGV[0]: $!\n";

# first-time only
$_ = <DATA>;
chop;
%rec = &aid_split($_);
@years = ();

# main loop
for(;;) {
    $currentYear = $rec{'year'};
    push(@years, (($rec{'year'} =~ /^\d+$/) ? $rec{'year'} : "other"));
    $outFile = &aid_config('wwwdir') . "class/" .
	(($rec{'year'} =~ /^\d+$/) ? $rec{'year'} : "other") . ".html";
    open(FMTOUT,">$outFile") || die "Can't open $outFile: $!\n";

    print FMTOUT &common_html_hdr(-1,1);
    print FMTOUT "<br>";
    $title  = ($rec{'year'} =~ /^\d+$/) ? "Class of $rec{'year'}" :
	"Faculty and Staff";
    print FMTOUT &aid_tableheader($title);
    print FMTOUT &common_intro_para(0);

    &write_entry(*FMTOUT,$_);
    while(<DATA>) {
	chop;
	%rec = &aid_split($_);
	
	last if (($rec{'year'} ne $currentYear) && ($currentYear =~ /^\d+$/));
	&write_entry(*FMTOUT,$_);
    }
    print FMTOUT &common_html_ftr(-1);
    close(FMTOUT);

    last if eof(DATA);
}

$outFile = &aid_config('wwwdir') . "class/index.html";
open(FMTOUT,">$outFile") || die "Can't open $outFile: $!\n";

print FMTOUT &common_html_hdr(2,0);
print FMTOUT "<br>";
print FMTOUT &aid_tableheader('Alumni Listed by Graduating Class');
print FMTOUT "<p><center><font size=\"+1\">";
print FMTOUT "Compact&nbsp;Form:<br>\n";
print FMTOUT "<a href=\"" . &aid_config('master_path') . "class.html\">";
print FMTOUT "All&nbsp;Alumni</a> |\n";
print FMTOUT "<a href=\"" . &aid_config('master_path') . "awalt.html\">";
print FMTOUT "Awalt&nbsp;Alumni</a>\n";
print FMTOUT "<p>Expanded&nbsp;Form</a>:<br>\n";

foreach $year (@years) {
    print FMTOUT "<a href=\"" . &aid_config('master_path');
    print FMTOUT "class/${year}.html\">";
    print FMTOUT ($year eq 'other') ? "Faculty/Staff" : $year % 100;
    print FMTOUT "</a>";
    print FMTOUT " |" unless $year eq 'other';
    print FMTOUT "\n";
}
print FMTOUT "</font></center><p>\n";

print FMTOUT &common_html_ftr(2);
close(FMTOUT);

exit(0);

sub write_entry {
    local(*FMTOUT,$record) = @_;
    local($[) = 0;
    local($_);
    local($fullname,$message);
    local(%rec) = &aid_split($record);

    $fullname = &inorder_fullname(*rec);

    print FMTOUT "<dl compact>\n";

    print FMTOUT "<dt><font size=\"+1\">";
    print FMTOUT "<strong>$fullname</strong>";
    print FMTOUT "</font>\n";

    print FMTOUT "&nbsp;<font size=\"-1\">[";
    print FMTOUT "<a href=\"" . &aid_config('cgi_path') . "?about=$rec{'id'}\">";
    print FMTOUT "details</a>";
    print FMTOUT "&nbsp;|&nbsp;";
    print FMTOUT "<a href=\"" . &aid_config('cgi_path') . "/vcard/$rec{'id'}.vcf\">";
    print FMTOUT "vCard</a>";
    print FMTOUT "]</font>\n";

    print FMTOUT &aid_image_tag('new_anchored') if &is_new($rec{'time'});

    print FMTOUT "<dt>School: <strong>$rec{'school'}</strong>\n" 
	if $rec{'school'} ne 'MVHS';
    print FMTOUT "<dt>Affiliation:  <strong>$rec{'year'}</strong>\n" 
	unless ($rec{'year'} =~ /^\d+$/);
    print FMTOUT "<dt>Email: <tt><strong><a href=\"mailto:$rec{'email'}\">$rec{'email'}</a></strong></tt>\n";
    print FMTOUT "<dt>Web Page: <tt><strong><a href=\"$rec{'homepage'}\">$rec{'homepage'}</a></strong></tt>\n"
	if $rec{'homepage'} ne '';
    print FMTOUT "<dt>Location: <strong>$rec{'location'}</strong>\n"
	if $rec{'location'} ne '';
    print FMTOUT "<dt>Joined: ";
    $date = &ctime($rec{'created'}); chop $date;
    print FMTOUT "<strong>$date</strong>\n";
    if ($rec{'time'} != $rec{'created'}) {
	print FMTOUT "<dt>Updated: ";
	$date = &ctime($rec{'time'}); chop $date;
	print FMTOUT "<strong>$date</strong>\n";
    }

    $message = &aid_get_usertext($rec{'id'});
    if ($message ne '') {
	print FMTOUT "<dt>What's New?\n";
	print FMTOUT "<dd>$message\n";
    }
    print FMTOUT "</dl>\n\n";
}
