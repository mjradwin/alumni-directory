$dirname = $0;
$dirname =~ s,/[^/]+$,,;
push(@INC, $dirname);

require 'aid_util.pl';
require 'getopts.pl';

$0 =~ s,.*/,,;  # basename
$usage = "usage: $0 [-hc] infile.adr outfile.db
    -h        Display usage information.
    -c        Rebuild cleanly (first remove all keys).
";

&Getopts('hc') || die "$usage\n";
$opt_h && die "$usage\n";
defined $ARGV[0] || die "$usage\n";
defined $ARGV[1] || die "$usage\n";

@db = &aid_create_db($ARGV[0]);

$ARGV[1] =~ s/\.db$//;
dbmopen(%DB,$ARGV[1],0666);

if ($opt_c)
{
    # rebuild cleanly...
    while (($key,$val) = each %DB)
    {
	delete $DB{$key};
    }
}

$i = 0;
select(STDOUT); $| = 1;
print STDOUT "$0: writing primary data...";
for (@db)
{
    next unless defined($_) && $_ ne '';
    %rec = &aid_parse($_);
    $rec{'n'} = &aid_get_usertext($rec{'id'});

    $DB{$rec{'id'}} = &aid_db_pack_rec(*rec);
    $DB{"\L$rec{'e'}\E"} = pack("n", $rec{'id'});
    
    print STDOUT "." if ($i++ % 100) == 0;
}
print STDOUT "\n";

&aid_rebuild_secondary_keys(*DB,0,0);
dbmclose(%DB);

print STDOUT "$0: build successful\n";
exit(0);

# avoid warnings
if ($^W && 0)
{
    $opt_h = $opt_h;
    $opt_c = $opt_c;
    $val   = $val;
}
