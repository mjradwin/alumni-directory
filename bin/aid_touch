#!/usr/local/bin/perl -w

use strict;
use lib "/home/mradwin/local/share/perl";
use DB_File::Lock;

$0 =~ s,.*/,,;  # basename
die "$0: No database file specified\n" unless $ARGV[0];

my $dbmfile = shift;
die "$0: $dbmfile: $!\n" unless -r $dbmfile;
my(%DB);
tie(%DB, 'DB_File::Lock', $dbmfile, O_CREAT|O_RDWR, 0644, $DB_HASH, 'write')
    or die "$dbmfile: $!\n";

die "invalid DB: $dbmfile\n" unless defined $DB{'_t'};

$DB{'_t'} = pack("N", time());

untie(%DB);

exit(0);
