$dirname = $0;
$dirname =~ s,/[^/]+$,,;
unshift(@INC, $dirname);

use DB_File;

require 'aid_util.pl';
require 'getopts.pl';

$0 =~ s,.*/,,;  # basename
$usage = "usage: $0 [-hd] infile.db
    -h        Display usage information.
    -d        Display debug diffs.
";

&Getopts('hd') || die "$usage\n";
$opt_h && die "$usage\n";
$opt_h = $opt_h;		# avoid warning
$opt_d = $opt_d;		# avoid warning
defined $ARGV[0] || die "$usage\n";

$dbmfile = shift;
tie(%DB, 'DB_File', $dbmfile, O_RDWR|O_CREAT, 0644, $DB_File::DB_HASH)
    or die "$dbmfile: $!\n";

@old_emails = ();
%new_emails = ();
while (($key,$val) = each %DB)
{
    if ($key =~ /\@/)
    {
	push(@old_emails,$key);
    }
    elsif ($key =~ /^\d+/)
    {
	%rec = &aid_db_unpack_rec($key,$val);
	$new_emails{"\L$rec{'e'}\E"} = pack('n',$key);
    }
}

foreach (@old_emails)
{
    delete $DB{$_};
}
while (($key,$val) = each %new_emails)
{
    $DB{$key} = $val;
}

local(@diffs) = &aid_rebuild_secondary_keys(*DB,0);
if ($opt_d)
{
    foreach (@diffs)
    {
	print "key $_ changed.\n";
    }
}

warn "$0: rebuild successful\n";
untie(%DB);
exit(0);

