use HTTP::Date;

$time = $id = '';
while(<>)
{
    chop;

    if (/^From /)
    {
	$time = $id = '';	# reset for new message
	$sawfrom = 1;
    }
    elsif (/^Date:\s+/)
    {
	s/^Date:\s+//;
	s/\([^\)]+\)\s*$//;	# remove trailing (PDT)
	s/\w+T\s*$//;		# remove trailing GMT
	$time = str2time($_);

	if ($sawfrom == 1 && $id ne '' && $time ne '')
	{
	    print "$time - $id\n";
	    $id = $time = '';
	    $sawfrom = 0;
	    next;
	}
    }
    elsif (/^Subject:\s+/)
    {
	if (/AID-(\d+)\]/)
	{
	    $id = $1;
	}
	else		# grab next line
	{
	    $_ = <>;
	    if (/AID-(\d+)\]/)
	    {
		$id = $1;
	    }
	}
	
	if ($sawfrom == 1 && $id ne '' && $time ne '')
	{
	    print "$time - $id\n";
	    $id = $time = '';
	    $sawfrom = 0;
	    next;
	}
    }
}

