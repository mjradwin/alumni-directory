$dirname = $0;
$dirname =~ s,/[^/]+$,,;
unshift(@INC, $dirname);

use DB_File;
use Fcntl qw(:DEFAULT :flock);

require 'aid_util.pl';
require 'getopts.pl';
require 'ctime.pl';

$0 =~ s,.*/,,;  # basename
$usage = "usage: $0 [-h] randkey [randkey2 .. randkeyN]
    -h        Display usage information.
";

&Getopts('h') || die "$usage\n";
@ARGV || die "$usage\n";
$opt_h && die "$usage\n";

my($dbmfile) = &aid_config('staging');
die "$dbmfile: $!\n" unless -r $dbmfile;

my(%DB,$db,$fd);
$db = tie(%DB, 'DB_File', $dbmfile, O_CREAT|O_RDWR, 0644,
	   $DB_File::DB_HASH)
    or die "$dbmfile: $!\n";

$fd = $db->fd;
open(DB_FH, "+<&=$fd") || die "dup $!";

foreach $key (@ARGV)
{
    if (defined $DB{$key} && $key =~ /^\w{8}$/ && $DB{$key} =~ /^-?\d+\0/)
    {
	my($id,$packed) = split(/\0/, $DB{$key}, 2);
	%rec = &aid_db_unpack_rec($id,$packed);

	my($return_path,$from,$subject,$body,@recip) =
	    &aid_verification_message($key, *rec);

	my($i);
	my($status) = 0;

	for ($i = 0; $status == 0 && $i < 3; $i++)
	{
	    $status =
		&aid_sendmail_v2($return_path,$from,$subject,$body,@recip);
	}

	next unless $status;

	# update timestamp
	unless (flock (DB_FH, LOCK_EX)) { die "flock: $!" }
	$rec{'lm'} = time;
	$DB{$key} = $rec{'id'} . "\0" . &aid_db_pack_rec(*rec);
	$db->sync;
	flock(DB_FH, LOCK_UN);

	# display something to stdout
	($affil,undef) = &aid_affiliate(*rec,0);
	print &aid_inorder_fullname(*rec), $affil, " <",
	$rec{'e'}, ">\n",
	"web submission: ", &ctime($rec{'u'}),
	"key=$key\tid=$id\n";

	print "\n";
    }
}

undef $db;
untie(%DB);
close(DB_FH);

exit 0;

# avoid warnings
if ($^W && 0)
{
    $opt_h = $opt_h;		# avoid warning
}
