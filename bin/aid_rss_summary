BEGIN {
  if ($0 =~ m,(.*[/\\]),) {
    unshift @INC, $1;
  } else {
    unshift @INC, ".";
  }
}

use strict;
use Getopt::Std;
use POSIX qw(strftime);
use aid_util;

$0 =~ s,.*/,,;  # basename
my $usage = "usage: $0 [-h] outfile.rdf
    -h        Display usage information.
";

my %opts;
getopts("h", \%opts) || die "$usage\n";
$opts{"h"} && die "$usage\n";
@ARGV == 1 || die "$usage\n";

my $outfile = shift;
open(FMTOUT,">$outfile.$$") || die "Can't open $outfile.$$: $!\n";

my $dbh = aid_util::db_connect();
my $DB = aid_util::load_records($dbh,
	 "ORDER BY a.alumnus_update DESC LIMIT 0, 20");
$dbh->disconnect;

my $lastBuildDate = strftime("%a, %d %b %Y %H:%M:%S GMT", gmtime(time()));

print FMTOUT
"<?xml version=\"1.0\" encoding=\"iso-8859-1\"?>
<rss version=\"2.0\">
<channel>
<title>" . aid_util::config("short_school") . " Alumni Internet Directory</title>
<link>http://" . aid_util::config("master_srv") . aid_util::config("master_path") .
    "recent.html</link>
<description>" . aid_util::config("descr_long") . "</description>
<language>en-us</language>
<lastBuildDate>$lastBuildDate</lastBuildDate>
";

foreach my $id (sort { $DB->{$b}->{"u"} <=> $DB->{$a}->{"u"} } keys %{$DB})
{
    my $recp = $DB->{$id};
    my($affil,$len) = aid_util::affiliate($recp, 0);
    my $pubDate = strftime("%a, %d %b %Y %H:%M:%S GMT", gmtime($recp->{"u"}));

    print FMTOUT
"<item>
<title>" . aid_util::html_entify_str(aid_util::inorder_fullname($recp)) . 
aid_util::html_entify_str($affil) .
"</title>
<link>http://" . aid_util::config("master_srv") .
    aid_util::about_path($recp,0) . "</link>
<pubDate>$pubDate</pubDate>
<description>Updated " . aid_util::caldate($recp->{"u"}), ".";

    if ($recp->{"n"}) {
	print FMTOUT " ", aid_util::html_entify_str($recp->{"n"});
    }

    print FMTOUT "</description>\n</item>\n";
}

print FMTOUT
"</channel>
</rss>
";

close(FMTOUT);
rename("$outfile.$$", $outfile);

# touch timestamp
my $now = time;
my $ts = $outfile;
$ts =~ s,([^/]+)$,\.$1,;
open(TS,">$ts") && close(TS);
utime $now, $now, $ts;
exit(0);
