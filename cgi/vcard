BEGIN {
    if ($0 =~ m,(.*[/\\]),) {
	unshift @INC, $1;
    } else {
	unshift @INC, '.';
    }
}
use lib "/home/mradwin/local/share/perl";

use DB_File::Lock;
use CGI qw(-no_xhtml);
use CGI::Carp qw(fatalsToBrowser);
use aid_util;
use strict;

aid_util::cgi_die('$PATH_INFO Missing', "This URL is bogus.")
    unless defined $ENV{'PATH_INFO'};

$ENV{'PATH_INFO'} =~ s/\+/ /g;
$ENV{'PATH_INFO'} =~ s/%([A-Fa-f0-9]{2})/pack("c",hex($1))/ge;

if ($ENV{'PATH_INFO'} =~ m,/(\d+)\.vcf$,i ||
    $ENV{'PATH_INFO'} =~ m,/(\d+)/.+\.vcf$,i)
{
    my $id = $1;

    my $dbmfile = aid_util::config('dbmfile');
    die "$dbmfile: $!\n" unless -r $dbmfile;

    my(%DB);
    tie(%DB, 'DB_File::Lock', $dbmfile, O_RDONLY, 0444, $DB_HASH, 'read')
	or die "$dbmfile: $!\n";

    my $val = $DB{$id};

    untie(%DB);

    if (defined $val)
    {
	my %rec = aid_util::db_unpack_rec($id,$val);

	print "Last-Modified: ", aid_util::http_date($rec{'u'}), "\015\012";
	print "Content-Type: text/x-vcard\015\012\015\012";
	print aid_util::vcard_text(\%rec);

	close(STDOUT);
	exit(0);
    }
}

$ENV{'PATH_INFO'} =~ s/&/&amp;/g;
$ENV{'PATH_INFO'} =~ s/</&lt;/g;
$ENV{'PATH_INFO'} =~ s/>/&gt;/g;

print "Status: 404 Not Found\015\012";
aid_util::cgi_die('Not Found',
	  "The vCard " . $ENV{'PATH_INFO'} .
	  " you requested could not be found.\n");

close(STDOUT);
exit(0);

